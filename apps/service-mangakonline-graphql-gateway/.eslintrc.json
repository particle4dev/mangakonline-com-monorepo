{
  "extends": "../../.eslintrc.json",
  "ignorePatterns": ["!**/*", "node_modules/"],
  "rules": {
    "indent": ["error", 2],
    "semi": ["error", "always"]
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    }
  ]
}
